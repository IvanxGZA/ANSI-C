#include<stdio.h>
//print Celsisu-Fahrenheit table but inverted
int main(){
  float fahr, celsius;
  int upper, lower, step;

  lower = -30;
  upper = 300;
  step = 10;

  celsius = upper;
  printf("Celsius-Fahrenheit Table but inverted\n\n");
  while(celsius >= lower){
    fahr = (celsius * 1.8) + 32.0;
    printf("\t%3.0f %3.0f\n", celsius, fahr);
    celsius = celsius - step;
  }
}
